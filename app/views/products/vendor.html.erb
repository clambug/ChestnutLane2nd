   <h3 style="text-align: center">MY PRODUCTS</h3>
<br>
<hr>
   <div class="container">
   <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <%= link_to image_tag(product.thumbnail), product, style:'width:100%' %>
        
         <br class="prodtit"><%= product.name %> 
          <br><%= number_to_currency(product.price, :unit =>"â‚¬") %>
          <br>
          <p><%= link_to image_tag("ellipse.png"), product %>  <%= product.user.name %> </p>
        <% if (user_signed_in?) && (current_user == product.user) %>
        <%= link_to 'Edit', edit_product_path(product), :class =>"cartbut", :role=>"button" %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' },  :class =>"cartbut", :role=>"button" %>
        <% end %>
        </p>
      </div>
    <% end %>
    </div>
