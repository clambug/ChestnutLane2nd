   <h3 style="text-align: center">MY PRODUCTS</h3>

   <div class="container">
   <div class="row">
    <% @products.limit(4).each do |product| %>
      <div class="col-md-3">
        <%= link_to image_tag(product.thumbnail), product, style:'width:100%' %>
        
         <br class="prodtit"><%= product.name %>  <a href="/cart/<%= product.id %>" class ="button">Add to Cart</a>
          <br><%= number_to_currency(product.price, :unit =>"â‚¬") %>
          <br>
          <p><%= link_to image_tag("ellipse.png"), product %>  <%= product.user.name %> </p>
        <% if (user_signed_in?) && (current_user == product.user) %>
        <%= link_to 'Edit', edit_product_path(product), :class =>"button", :role=>"button" %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' },  :class =>"button", :role=>"button" %>
        <% end %>
        </p>
      </div>
    <% end %>
    </div>
    </div>


