Navigation only<br>
<% Category.where(display_in_nav: true).each do |cat| %>
<%= link_to cat.name, products_path(category: cat.name)
%>
<br>
<% end %>
<br>
<hr>
<br>

   <div class="container">
    <% @products.each do |product| %>
      <div class="itemhols">
        <%= link_to image_tag(product.thumbnail), product, style:'width:100%', :class =>"img-fluid img-thumbnail" %>
        
         <p><%= product.name %>
         </p>
          <p><%= product.price %>
          <br>
          <%= product.category.name %>
          <%= product.user.name %>
          </p>
        <p></p>
        <a href="/cart/<%= product.id %>" class ="button">Add to Cart</a>
        <%= link_to 'Show', product,  :class =>"button", :role=>"button" %>
        <%= link_to 'Edit', edit_product_path(product), :class =>"button", :role=>"button" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },  :class =>"button", :role=>"button" %>
        </p>
      </div>
    <% end %>
    </div>


